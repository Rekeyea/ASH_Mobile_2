<Alloy>
	<Collection src="Publicacion"/>
	<Window id="publicaciones">
		<Menu id="menu" platform="android" title="Animales Sin Hogar"   >
			<MenuItem  title="Publicar" onClick="nuevaPublicacion" icon="/nueva.png" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"/> 
        </Menu>
        <LeftNavButton platform="ios">
    		<Button onClick="Menu" left="10" top="5" image="menu.png"  height="20" width="23" />
    	</LeftNavButton>
		<View id="sideMenu">
		    <TableView>
				<TableViewRow class="tableViewMenu"  title="Mapa" onClick="verMapa" ></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Lista" onClick="verPublicaciones"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Configuracion" onClick="configurar"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Donaciones" onClick="donar"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Padrinos" onClick="padrinos"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Adopcion" onClick="adoptar"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Sobre ASH" onClick="sobreASH"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
			</TableView>
		</View>
		<View id="contenedor"  zIndex="1">
			<ListView id="listaPublicaciones" defaultItemTemplate="template">
				<Templates>
					<ItemTemplate name="template">
						<View class="mainContent">
							<ImageView bindId="imagen" class="imagen"></ImageView>
							<View class="verText">
								<Label bindId="titulo" class="titulo"></Label>
								<Label bindId="descripcion" class="descripcion"></Label>
							</View>
						</View>
						<ImageView bindId="tipo" class="tipo"></ImageView>
					</ItemTemplate>
				</Templates>
				<ListSection id="onlySection" dataCollection="Publicacion" dataTransform="transformarPublicacion">
					<ListItem titulo:text="{titulo}" descripcion:text="{descripcion}" imagen:image="{foto}" tipo:image="{tipoImg}"></ListItem>
				</ListSection>
			</ListView>
		</View>

	</Window>
</Alloy>