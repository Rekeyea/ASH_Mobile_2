<Alloy>
	<Model id="modeloPublicacion" src="Publicacion" instance="true"></Model>
	<Window id="index">
		<ActionBar id="actionbar" title="Animales Sin Hogar" onHomeIconItemSelected="Menu" platform="android" />
		<View id="contenedor" zIndex="1">
			<ScrollView id="scroll">
				<Label id="titulo" class="lblTitulo" text="{$.modeloPublicacion.titulo}"></Label>
				<Label id="descripcion" class="lblDescripcion" text="{$.modeloPublicacion.descripcion}"></Label>
				<View left="20" right="20" top="10" height="Ti.UI.SIZE">
					<ImageView id="imgP"></ImageView>
				</View>
				<View id="vwBtns">
					<Button id="btnContactar" onClick="Contactar" image="/telefono.png" backgroundColor="transparent"></Button>
					<Button id="btnVerMapa" onClick="VerEnMapa" image="/mapa.png" backgroundColor="transparent"></Button>		
					<Button id="btnDenunciar" onClick="Denunciar" color="red" backgroundColor="transparent">Denunciar!</Button>
					<View top="20" height="1"></View>
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>