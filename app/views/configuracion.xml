<Alloy>
	<Window id="configuracion">
		<Menu id="menu" platform="android" title="Animales Sin Hogar" >
			<MenuItem  title="Menu" onClick="Menu" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"/> 
        </Menu>
        <LeftNavButton platform="ios">
    		<Button onClick="Menu" left="10" top="5" image="menu.png"  height="20" width="23" />
    	</LeftNavButton>
		<View id="sideMenu">
		    <TableView>
				<TableViewRow class="tableViewMenu"  title="Mapa" onClick="verMapa" ></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Lista" onClick="verPublicaciones"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Configuracion" onClick="configurar"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Donaciones" onClick="donar"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Padrinos" onClick="padrinos"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Adopcion" onClick="adoptar"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
				<TableViewRow class="tableViewMenu"  title="Sobre ASH" onClick="sobreASH"></TableViewRow>
				<TableViewRow ><View class="line" ></View></TableViewRow>
			</TableView>
		</View>
		<View id="contenedor" class="container" zIndex="1">
			<TableView layout="horizontal" top="20">
				<TableViewRow layout="horizontal">
					<Label text="Nombre" class="LabelConf"></Label>
					<TextField left="70" hintText="Nombre"></TextField>
				</TableViewRow>
				<TableViewRow layout="horizontal" >
					<Label text="Mail" class="LabelConf"></Label>
					<TextField left="70" hintText="Mail"></TextField>
				</TableViewRow>
				<TableViewRow layout="horizontal">
					<Label text="Telefono" class="LabelConf"></Label>
					<TextField left="70" hintText="Telefono"></TextField>
				</TableViewRow>
				<TableViewRow layout="horizontal">
					<Label text="Notificaciones" class="LabelConf"></Label>
					<Switch left="70" id="switchConf"></Switch>
				</TableViewRow>
			</TableView>
		</View>
	</Window>
</Alloy>